@client.event
async def on_reaction_add (reaction, user):
	msg = reaction	
	if reaction.emoji == "ğŸ’š" and msg.id == msg_id and user == msg_user:
	role = discord.utils.find(lambda r: r.name == "Administrador", msg.server.roles)
	await client.add_roles(user, role) 

	if reaction.emoji == "ğŸ’™" and msg.id == msg_id and user == msg_user:
	role = discord.utils.find(lambda r: r.name == "Contador", msg.server.roles)
	await client.add_roles(user, role) 

